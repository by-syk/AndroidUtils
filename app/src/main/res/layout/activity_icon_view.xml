<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <HorizontalScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="8dp"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <com.by_syk.lib.view.IconGridView
                    android:layout_width="144dp"
                    android:layout_height="144dp"
                    app:igColor="#ffff0000"
                    app:igWithGrids="false"
                    app:igDash="false"
                    app:igStyle="cross" />

                <com.by_syk.lib.view.IconGridView
                    android:layout_width="144dp"
                    android:layout_height="144dp"
                    android:layout_marginLeft="8dp"
                    app:igColor="#ffff0000"
                    app:igWithGrids="false"
                    app:igDash="true"
                    app:igStyle="cross" />

                <com.by_syk.lib.view.IconGridView
                    android:layout_width="144dp"
                    android:layout_height="144dp"
                    android:layout_marginLeft="8dp"
                    app:igColor="#ffff0000"
                    app:igWithGrids="true"
                    app:igDash="false"
                    app:igStyle="cross" />

                <FrameLayout
                    android:layout_marginLeft="8dp"
                    android:layout_width="144dp"
                    android:layout_height="144dp">

                    <com.by_syk.lib.view.IconGridView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        app:igColor="#ffff0000"
                        app:igWithGrids="false"
                        app:igDash="false"
                        app:igStyle="cross" />

                    <com.by_syk.androidutils.widget.DemoIcon
                        android:layout_width="match_parent"
                        android:layout_height="match_parent" />

                </FrameLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:orientation="horizontal">

                <com.by_syk.lib.view.IconGridView
                    android:layout_width="144dp"
                    android:layout_height="144dp"
                    app:igColor="#ffff0000"
                    app:igWithGrids="false"
                    app:igDash="false"
                    app:igStyle="unionJack" />

                <com.by_syk.lib.view.IconGridView
                    android:layout_width="144dp"
                    android:layout_height="144dp"
                    android:layout_marginLeft="8dp"
                    app:igColor="#ffff0000"
                    app:igWithGrids="false"
                    app:igDash="true"
                    app:igStyle="unionJack" />

                <com.by_syk.lib.view.IconGridView
                    android:layout_width="144dp"
                    android:layout_height="144dp"
                    android:layout_marginLeft="8dp"
                    app:igColor="#ffff0000"
                    app:igWithGrids="true"
                    app:igDash="false"
                    app:igStyle="unionJack" />

                <FrameLayout
                    android:layout_marginLeft="8dp"
                    android:layout_width="144dp"
                    android:layout_height="144dp">

                    <com.by_syk.lib.view.IconGridView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        app:igColor="#ffff0000"
                        app:igWithGrids="false"
                        app:igDash="false"
                        app:igStyle="unionJack" />

                    <com.by_syk.androidutils.widget.DemoIcon
                        android:layout_width="match_parent"
                        android:layout_height="match_parent" />

                </FrameLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:orientation="horizontal">

                <com.by_syk.lib.view.IconGridView
                    android:layout_width="144dp"
                    android:layout_height="144dp"
                    app:igColor="#ffff0000"
                    app:igWithGrids="false"
                    app:igDash="false"
                    app:igStyle="materialLite" />

                <com.by_syk.lib.view.IconGridView
                    android:layout_width="144dp"
                    android:layout_height="144dp"
                    android:layout_marginLeft="8dp"
                    app:igColor="#ffff0000"
                    app:igWithGrids="false"
                    app:igDash="true"
                    app:igStyle="materialLite" />

                <com.by_syk.lib.view.IconGridView
                    android:layout_width="144dp"
                    android:layout_height="144dp"
                    android:layout_marginLeft="8dp"
                    app:igColor="#ffff0000"
                    app:igWithGrids="true"
                    app:igDash="false"
                    app:igStyle="materialLite" />

                <FrameLayout
                    android:layout_marginLeft="8dp"
                    android:layout_width="144dp"
                    android:layout_height="144dp">

                    <com.by_syk.lib.view.IconGridView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        app:igColor="#ffff0000"
                        app:igWithGrids="false"
                        app:igDash="false"
                        app:igStyle="materialLite" />

                    <com.by_syk.androidutils.widget.DemoIcon
                        android:layout_width="match_parent"
                        android:layout_height="match_parent" />

                </FrameLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:orientation="horizontal">

                <com.by_syk.lib.view.IconGridView
                    android:layout_width="144dp"
                    android:layout_height="144dp"
                    app:igColor="#ffff0000"
                    app:igWithGrids="false"
                    app:igDash="false"
                    app:igStyle="materialFull" />

                <com.by_syk.lib.view.IconGridView
                    android:layout_width="144dp"
                    android:layout_height="144dp"
                    android:layout_marginLeft="8dp"
                    app:igColor="#ffff0000"
                    app:igWithGrids="false"
                    app:igDash="true"
                    app:igStyle="materialFull" />

                <com.by_syk.lib.view.IconGridView
                    android:layout_width="144dp"
                    android:layout_height="144dp"
                    android:layout_marginLeft="8dp"
                    app:igColor="#ffff0000"
                    app:igWithGrids="true"
                    app:igDash="false"
                    app:igStyle="materialFull" />

                <FrameLayout
                    android:layout_marginLeft="8dp"
                    android:layout_width="144dp"
                    android:layout_height="144dp">

                    <com.by_syk.lib.view.IconGridView
                        android:layout_width="144dp"
                        android:layout_height="144dp"
                        app:igColor="#ffff0000"
                        app:igWithGrids="false"
                        app:igDash="false"
                        app:igStyle="materialFull" />

                    <com.by_syk.androidutils.widget.DemoIcon
                        android:layout_width="match_parent"
                        android:layout_height="match_parent" />

                </FrameLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:orientation="horizontal">

                <com.by_syk.lib.view.IconGridView
                    android:layout_width="144dp"
                    android:layout_height="144dp"
                    android:background="@android:color/white"
                    app:igColor="#80808080"
                    app:igWithGrids="false"
                    app:igDash="false"
                    app:igStyle="materialFull" />

                <com.by_syk.lib.view.IconGridView
                    android:layout_width="144dp"
                    android:layout_height="144dp"
                    android:layout_marginLeft="8dp"
                    android:background="@android:color/white"
                    app:igColor="#80808080"
                    app:igWithGrids="false"
                    app:igDash="true"
                    app:igStyle="materialFull" />

                <com.by_syk.lib.view.IconGridView
                    android:layout_width="144dp"
                    android:layout_height="144dp"
                    android:layout_marginLeft="8dp"
                    android:background="@android:color/white"
                    app:igColor="#80808080"
                    app:igWithGrids="true"
                    app:igDash="false"
                    app:igStyle="materialFull" />

                <FrameLayout
                    android:layout_marginLeft="8dp"
                    android:layout_width="144dp"
                    android:layout_height="144dp">

                    <com.by_syk.lib.view.IconGridView
                        android:layout_width="144dp"
                        android:layout_height="144dp"
                        android:background="@android:color/white"
                        app:igColor="#80808080"
                        app:igWithGrids="false"
                        app:igDash="false"
                        app:igStyle="materialFull" />

                    <com.by_syk.androidutils.widget.DemoIcon
                        android:layout_width="match_parent"
                        android:layout_height="match_parent" />

                </FrameLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:orientation="horizontal">

                <com.by_syk.lib.view.IconGridView
                    android:layout_width="144dp"
                    android:layout_height="144dp"
                    android:background="@android:color/black"
                    app:igColor="#80808080"
                    app:igWithGrids="false"
                    app:igDash="false"
                    app:igStyle="materialFull" />

                <com.by_syk.lib.view.IconGridView
                    android:layout_width="144dp"
                    android:layout_height="144dp"
                    android:layout_marginLeft="8dp"
                    android:background="@android:color/black"
                    app:igColor="#80808080"
                    app:igWithGrids="false"
                    app:igDash="true"
                    app:igStyle="materialFull" />

                <com.by_syk.lib.view.IconGridView
                    android:layout_width="144dp"
                    android:layout_height="144dp"
                    android:layout_marginLeft="8dp"
                    android:background="@android:color/black"
                    app:igColor="#80808080"
                    app:igWithGrids="true"
                    app:igDash="false"
                    app:igStyle="materialFull" />

                <FrameLayout
                    android:layout_marginLeft="8dp"
                    android:layout_width="144dp"
                    android:layout_height="144dp">

                    <com.by_syk.lib.view.IconGridView
                        android:layout_width="144dp"
                        android:layout_height="144dp"
                        android:background="@android:color/black"
                        app:igColor="#80808080"
                        app:igWithGrids="false"
                        app:igDash="false"
                        app:igStyle="materialFull" />

                    <com.by_syk.androidutils.widget.DemoIcon
                        android:layout_width="match_parent"
                        android:layout_height="match_parent" />

                </FrameLayout>

            </LinearLayout>

        </LinearLayout>

    </HorizontalScrollView>

</ScrollView>